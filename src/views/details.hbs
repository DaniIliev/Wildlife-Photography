<main>

    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Title:{{post.title}}</h1>
                    <h3>Created by an author: {{post.author.firstname}}</h3>
                    <div class="card_animal">
                        <p class="card-keyword">Keyword: {{post.keyword}}</p>
                        <p class="card-location">Location:{{post.location}}</p>
                        <p class="card-date">Date: {{post.createData}}</p>
                    </div>

                    <p class="disc">Description: {{post.description}}</p>

                    <!-- If there is no registered user, do not display buttons-->
                    <div class="social-btn">
                        {{#if isAuthenticated}}

                        {{#if isAuthor}}
                        <a href="/post/{{post._id}}/edit" class="edit-btn">Edit</a>
                        <a href="/post/{{post._id}}/delete" class="del-btn">Delete</a>
                        {{/if}}

                        {{#if guest}}
                        {{#if isVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <a href="/post/{{post._id}}/upVote" class="vote-up">UpVote +1</a>
                        <a href="/post/{{post._id}}/downVote" class="vote-down">DownVote -1</a>
                        {{/if}}
                        {{/if}}
                        {{/if}}
                        <!-- logged in user who has already voted-->

                    </div>
                </div>
            </div>
            <div class="card_right">
                <img src="{{post.imageUrl}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <p class="PV">Total rating of votes: {{raiting}}</p>
                    </div>
                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    {{#if hasVotedUsers}}
                     <p class="disc">People who voted for the post - {{usersVoted}}</p>
                     {{else}}
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>

</main>